<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="200dp"
    tools:viewBindingIgnore="true"
    android:background="@drawable/round20"
    android:padding="20dp"
    android:backgroundTint="@color/white"
    android:layout_marginEnd="30dp">


    <TextView
        android:id="@+id/doctorNameId"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Dr. seldon kane kine"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/doctorDesId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MBBS from DMC, FCPS ,  Heart Specialist"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/topDrProfilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/doctorNameId"
        android:src="@drawable/dr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>